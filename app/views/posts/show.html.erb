<h1> <%= @post.title %></h1>
<div>
    <%= @post.date %>
</div>
<div>
    <%= @post.body %>
</div>
<br>
<% if @post.user == current_user -%>
	<div class="btn-group">
		<%= link_to 'Chỉnh sửa', edit_post_path(@post), class: "btn btn-primary" %>
		<%= link_to 'Xóa', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
	</div>
<% end %>

